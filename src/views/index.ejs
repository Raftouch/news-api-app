

<div class="pt-40 px-5 grid grid-cols-1 sm:grid-cols-2 gap-5 md:grid-cols-3 xl:grid-cols-4 justify-items-center mb-5">
  <% articles.forEach((article, index) => { %>
  <div class="flex flex-col gap-5 border border-slate-950">
    <h1 class="text-center font-bold"><%= article.title %></h1>
    <img src="<%= article.image %>" />
    <p><%= article.description %></p>
    <!-- <p><%= article.url %></p> -->
    <p><%= article.source.name %></p>
  </div>
  <% }) %>
</div>

