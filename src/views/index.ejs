<div class="pt-28 px-5 grid grid-cols-1 sm:grid-cols-2 gap-5 md:grid-cols-3 xl:grid-cols-4 justify-items-center mb-5">
  <% articles.forEach((article, index) => { %>
    <a href="/article/<%= %>">
      <div class="flex flex-col gap-5 border border-black">
        <h1 class="text-center font-bold"><%= article.title %></h1>
        <img src="<%= article.image %>" />
        <p class="text-sm"><%= article.description %></p>
      </div>
    </a>
  <% }) %>
</div>

